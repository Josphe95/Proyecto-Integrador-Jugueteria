                            <form class="card__form" action="/<%= card.id %>?_method=PUT" method="POST"><button class="card__button-action">Actualizar</button>
                            </form>
                            <form class="card__form" action="/<%= card.id %>?_method=DELETE" method="POST">
                            <button class="card__button-action">Eliminar</button>
                            </form>
                        </div>
                        </div>
                      </artile>
                    
                  </div>    
           <% }) %>
